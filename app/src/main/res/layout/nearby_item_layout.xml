<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_gravity="center"
    android:layout_margin="20dp"
    android:padding="10dp"
    app:cardBackgroundColor="@color/colorTransPrimaryLight"
    app:cardCornerRadius="20dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/venue_name_nearby"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/maven_pro_bold"
            android:text="Name: "
            android:textColor="@color/cPrimaryDark"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@id/venue_address_nearby"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/venue_address_nearby"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/maven_pro_medium"
            android:text="Address: "
            android:textColor="@color/cPrimaryDark"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@id/view_group_nearby_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/venue_name_nearby" />


        <Button
            android:id="@+id/view_group_nearby_button"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rectangle_round_outline_purple"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/maven_pro_bold"
            android:padding="20dp"
            android:text="view group"
            android:textColor="@color/cPrimaryDark"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/venue_address_nearby" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
