<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:gravity="center">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        app:cardBackgroundColor="@color/cPrimary"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView_venue_picture"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/textView_venue_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/maven_pro_black"
                android:textColor="@color/cPrimaryDark"
                tools:text="Empire State Building" />

            <TextView
                android:id="@+id/textView_venue_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/maven_pro_medium"
                android:textColor="@color/cPrimaryDark"
                tools:text="20 W 34th St, New York, NY 10001" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/maven_pro_bold"
                    android:text="@string/rating"
                    android:textColor="@color/cPrimaryDark" />

                <TextView
                    android:id="@+id/textView_venue_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/maven_pro_medium"
                    android:textColor="@color/cPrimaryDark"
                    tools:text="3.5" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView_venue_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:autoLink="phone"
                android:fontFamily="@font/maven_pro_medium"
                android:linksClickable="true"
                android:textColor="@color/cPrimaryDark"
                tools:text="718-222-2222" />

            <Button
                android:id="@+id/button_directions"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_directions_yellow_24dp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>